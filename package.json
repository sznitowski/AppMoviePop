{
  "name": "appmoviepop",
  "version": "1.0.0",
  "description": "Api crud",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "cd server && npm install && node server.js",
    "server": "node server.js --exec babel-node --presets babel-preset-env",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sznitowski/AppMoviePop.git"
  },
  "keywords": [
    "Mongodb",
    "Express",
    "React",
    "Nodejs"
  ],
  "author": "Valentin Sznitowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sznitowski/AppMoviePop/issues"
  },
  "homepage": "https://github.com/sznitowski/AppMoviePop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.8"
  }
}